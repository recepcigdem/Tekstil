@using Microsoft.AspNetCore.Mvc.Localization

@model UI.Models.AgeGroup.DefinitionTitle
@inject IViewLocalizer Localizer
@inject UI.Utils.LocalizationService SharedLocaLizer


<link href="~/css/detailReadOnly.css" rel="stylesheet" />
<link href="~/css/customerReadOnlyDetail.css" rel="stylesheet" />

@using (Html.BeginForm("DetailReadOnly", "AgeGroup", FormMethod.Post, new { id = "formDetail" }))
{
    @Html.HiddenFor(x => x.EntityId)

    <div class="page-content">
        <div class="panel">
            <header class="panel-heading">
                <div class="panel-actions"></div>
                @*<h3 class="panel-title">@Localizer["PageTitle"]</h3>*@
            </header>
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-info">
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-8" style="margin-top:20px;">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                @Html.RadioButtonFor(x => x.IsActive, "", new { @class = "form-control", @type = "radio", @name = "IsActive", @id = "radioIsActive", @disabled = "disable" })
                                                @Html.LabelFor(x => x.IsActive, "")@Localizer["IsActive"]
                                            </div>
                                        </div>
                                        <div class="col-md-4" id="divCardCode">
                                            <div class="form-group">
                                                @Localizer["CardCode"]
                                                @Html.TextBoxFor(x => x.CardCode, new { @class = "form-control numericField", @readonly = "readonly" })
                                            </div>
                                        </div>
                                        <div class="col-md-12" id="divShortDescription">
                                            <div class="form-group">
                                                @Localizer["ShortDescription"]
                                                @Html.TextBoxFor(x => x.ShortDescription, new { @class = "form-control", @readonly = "readonly" })
                                            </div>
                                        </div>
                                        <div class="col-md-6" id="divDescription">
                                            <div class="form-group">
                                                @Localizer["Description"]
                                                @Html.TextBoxFor(x => x.Description,  new { @class = "form-control", @readonly = "readonly" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-2" style="float:right">
                        <button class="btn btn-success" onclick="location.href = '@Url.Action("Detail", "AgeGroup",new {id=Model.EntityId })'" data-dismiss="modal" type="button">@Localizer["Edit"]</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



<script type="text/javascript">
    $(document).ready(function () {
        $('input').iCheck({
            radioClass: 'iradio_flat-blue',
            checkboxClass: 'icheckbox_flat-blue'
        });
    });
</script>

